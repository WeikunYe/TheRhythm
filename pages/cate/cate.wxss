page {
  background-color: #181818;
}

.cate-header {
  color: #dfd7c3;
  margin: 30px 0 0 10px;
  font-size: larger;
}

.search-bar {
  position: relative;
}

.search-bar input {
  border: none;
  background-color: #363636;
  border-radius: 50px;
  width: 90%;
  margin: 10px 0 0 10px;
  padding: 5px 10px;
  color: #dfd7c3;
}

.search {
  position: absolute;
  right: 8%;
  top: 50%;
  transform: translateY(-50%);
}

.p-grid {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 30px;
}

.p-grid-item {
  width: 45%;
  flex: 0 0 45%;
  overflow: hidden;
  margin-bottom: 30px;
  position: relative;
  height: auto;
  border-radius: 20px;
}

.p-grid-item image {
  width: 100%;
  position: relative;
}

.p-grid-item image::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(54, 54, 54, 0.5);
  z-index: 3;
}

.p-grid-content {
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: 5;
  top: 0;
  left: 0;
}

.count {
  margin-top: 10px;
  font-style: italic;
  font-size: smaller;
}

.author {
  padding: 0 10px;
  font-weight: bold;
}

.author, .count {
  text-align: center;
  color: #dfd7c3;
}

.inner {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  transform: translate(-50%, -50%);
}
