page{
  background-color: #181818;
}
.poetry-grid {
  margin-bottom: 80px;
}

.des {
  color: #dfd7c3;
  font-size: large;
  padding-left: 35px;
  font-weight: 700;
  text-transform: uppercase;
  margin-top: 30px;
}

.poetry-item {
  padding: 20px 30px;
  border-radius: 20px;
  position: relative;
}

.poetry-item .image {
  border-radius: 20px;
}

.poetry-item .image image {
  width: 100%;
  border-radius: 20px;
}

.poetry-item .date {
  color: #ff4d27;
  font-size: x-small;
  font-weight: 700;
  position: absolute;
  top: 40px;
  right: 50px;
}

.poetry-item .author {
  color: #ff4d27;
  font-size: x-small;
  font-weight: 700;
  position: absolute;
  top: 40px;
  left: 50px;
}

.poetry-item .title {
  position: absolute;
  font-weight: 700;
  font-size: x-large;
  color: #dfd7c3;
  left: 30px;
  bottom: 24px;
  padding-left: 20px;
  padding-top: 10px;
  padding-bottom: 10px;
  background-color: rgba(54, 54, 54, 0.8);
  width: calc(100% - 80px);
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
}
