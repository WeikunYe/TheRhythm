.bg-wrapper {
  position: fixed;
  height: 100vh;
  width: 100vh;
  background-color: #181818;
}
.poetry-outer{
  padding-top: 70vh;
}
.content {
  position: relative;
  z-index: 5;
  color: #dfd7c3;
  background-color: rgba(54, 54, 54, 0.9);
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding:20px 10px;
  text-align: center;
}
.content .title{
  color: #dfd7c3;
  text-align: left;
  font-size: xx-large;
}

.content .author{
  color: #ff4d27;
  font-size: x-small;
  text-align: left;
  display: flex;
  justify-content: flex-start;
  padding-top: 10px;
  font-weight: 700;
  font-style: italic;
}
.content .author text:not(:last-child){
  margin-right: 25px;
}
.poetry-body{
  border-top: 1px solid rgba(223,215,195, .5);
  margin-top: 20px;
  padding-top: 20px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: medium;
}
.poetry-body view{
  margin-bottom: 10px;
}
.i-switch-checked {
  background-color: #ff4d27;
  border-color: #ff4d27;
}
.switcher{
  position: absolute;
  right: 20px;
  top: 40px;
}